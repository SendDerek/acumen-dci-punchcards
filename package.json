{
  "name": "acumen-dci-punchcards",
  "version": "1.0.0",
  "description": "Automated Playwright scripts for Acumen DCI punch card submissions and approvals",
  "main": "index.js",
  "scripts": {
    "approve": "npx playwright test approve-punchcards-single.spec.ts --project=chromium",
    "approve:headed": "npx playwright test approve-punchcards-single.spec.ts --project=chromium --headed",
    "approve:debug": "npx playwright test approve-punchcards-single.spec.ts --project=chromium --debug",
    "submit": "npx playwright test submit-punchcards.spec.ts --project=chromium",
    "submit:headed": "npx playwright test submit-punchcards.spec.ts --project=chromium --headed",
    "submit:debug": "npx playwright test submit-punchcards.spec.ts --project=chromium --debug"
  },
  "keywords": [],
